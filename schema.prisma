// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int       @id @default(autoincrement())
  name           String?
  description    String?
  price          Float?
  image_url      String?
  category       String?
  user_id        Int?
  username       String?
  email          String?
  password       String?
  first_name     String?
  last_name      String?
  address        String?
  phone_number   String?
  order_date     DateTime?
  status         String?
  total_amount   Float?
  quantity       Int?
  subtotal       Float?
  street_address String?
  city           String?
  state          String?
  postal_code    String?
  country        String?
  rating         Int?
  comment        String?
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  @@map(name: "ecommerce_products")
}

model User {
  user_id        Int     @id @default(autoincrement())
  username       String?
  email          String?
  password       String?
  first_name     String?
  last_name      String?
  address        String?
  phone_number   String?
  street_address String?
  city           String?
  state          String?
  postal_code    String?
  country        String?
}

model Order {
  order_id     Int       @id @default(autoincrement())
  order_date   DateTime?
  status       String?
  total_amount Float?
  quantity     Int?
  subtotal     Float?
  rating       Int?
  comment      String?
  user_id      Int?
}

model Items {
  product_id  Int     @id @default(autoincrement())
  name        String?
  description String?
  price       Float?
  image_url   String?
  category    String?
  order_id    Int?
}

model Customer {
  user_id        Int     @id @default(autoincrement())
  username       String?
  email          String?
  password       String?
  first_name     String?
  last_name      String?
  address        String?
  phone_number   String?
  street_address String?
  city           String?
  state          String?
  postal_code    String?
  country        String?
}

model Shipped {
  order_id     Int      @id @default(autoincrement())
  order_date   DateTime
  status       String
  total_amount Float
  quantity     Int
  subtotal     Float
  rating       Int
  comment      String
}

model Mobile {
  product_id  Int     @id @default(autoincrement())
  name        String?
  description String?
  price       Float?
  image_url   String?
  category    String?
  order_id    Int?
}
